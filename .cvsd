# create readable diffs from cvs
#
# CVS ID:
# --------
# Status: Up-to-date
#
use strict;
use Getopt::Long;

# ========================================
# get release options...
# ----------------------------------------
my @list;
my $Release1;
my $Release2;
my $result = GetOptions (
	"release1|r1=s"  => \$Release1,
	"release2|r2=s"  => \$Release2,
	"help|h"         => \&usage,
	"<>"             => \&usage
);

# ========================================
# get current changes, with release info
# ----------------------------------------
if (! defined $Release1) {
	my $dif  = qx(cvs diff -N -u 2>/dev/null);
	@list = split (/\n/,$dif);
} else {
if (! defined $Release2) {
	my $dif  = qx(cvs diff -N -r $Release1 -u 2>/dev/null);
	@list = split (/\n/,$dif);
} else {
	my $dif  = qx(cvs diff -N -r $Release1 -r $Release2 -u 2>/dev/null);
	@list = split (/\n/,$dif);
}
}

# ========================================
# fixing dif output and generate dif
# file now. print output to stderr
# ----------------------------------------
my $full;
my $small;
my @newlist;
my $do_fixup = 0;
foreach (@list) {
	if (/^Index: (.*)/) {
		$full = $1;
		($small) = ($full =~ m=.*/([^\t]*)=);
		push(@newlist,$_);
		if (!$small) { $small = $full; } {
			$do_fixup = 1;
		}
	} else {
		$do_fixup = 0 if (/^@/);
		if ($do_fixup) {
			s!(\Q$small\E|/(sourceware/cvs-|)tmp/[a-zA-Z0-9]+)(?=$|\t)!$full! 
			unless /\Q$full\E/;
		}
		push(@newlist,$_);
	}
}

# ========================================
# grep unneeded information from the dif
# ----------------------------------------
@list = grep {!/^=/} @newlist;
@list = grep {!/^RCS file:/} @list;
@list = grep {!/^retrieving revision/} @list;
@list = grep {!/^diff/} @list;
@list = grep {!/^Index:/} @list;
@list = grep {!/^\?/} @list;

# ========================================
# print out data
# ----------------------------------------
foreach (@list) {
	print "$_\n";
}

# ========================================
# usage
# ----------------------------------------
sub usage {
	print ".cvsd [ -r1 <Release1> ] [ -r2 <Release2> ]\n";
	exit (0);
}
